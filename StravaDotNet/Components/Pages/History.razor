@page "/history"
@using Data.Models.Strava
@using StravaDotNet.ViewModels
@using StravaDotNet.Components.Services
@using MudBlazor
@inject NavigationManager Navigation
@inject AuthState AuthState
@inject DetailedActivityService DetailedActivityService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Activity History</PageTitle>

<form>
    <button type="button" class="btn btn-secondary" style="margin-right:30px;" @onclick="LoadData">Load Data</button>
</form>


@foreach (var week in CalendarWeeks.AsEnumerable().Reverse())
{
    <div class="week-row" style="display: flex;">
        @foreach (var day in week.Days)
        {
            <div class="day-cell" style="flex: 1 0 14.2857%; padding: 4px;">
                <MudPaper Class="calendar-day pa-2">
                    @if (day.Date != DateTime.MinValue)
                    {
                        <span>@day.Date.ToString("dd-MM-y")</span>
                        @foreach (var activity in day.Activities)
                        {
                            <MudChip T="string" Color="Color.Info" Class="mt-1">
                                @($"{activity.Distance} {activity.Type.ToLower()}")
                            </MudChip>
                        }
                    }
                </MudPaper>
            </div>
        }
    </div>
}


<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@LoadMoreMonths">
    Load More
</MudButton>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var isLoggedIn = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "isLoggedIn");
            AuthState.IsLoggedIn = isLoggedIn == "true";
            StateHasChanged();
        }
    }
    private List<ActivityVm> detailedActivities;
    private List<SimpleActivity> simpleActivities;
    @code {
        DateTime StartMonth = DateTime.Now.AddMonths(-3); // Four months back
        DateTime EndMonth = DateTime.Now;

        List<CalendarWeek> CalendarWeeks = new();
        }
    private async Task LoadData()
    {
    detailedActivities = await DetailedActivityService.GetDetailedActivityVmsAsync();
    simpleActivities = new List<SimpleActivity>();
    foreach (ActivityVm activity in detailedActivities)
    {
        if (activity.Activity.StartDate.HasValue && activity.Activity.Type != null)
        {
            simpleActivities.Add(new SimpleActivity
                    {
                        Type = activity.Activity.Type,
                        StartDate = activity.Activity.StartDate.Value,
						Distance = activity.Activity.Distance.HasValue
								? $"{(activity.Activity.Distance.Value / 1000):F2} km"
								: "N/A"
                    });
        }
    }
    simpleActivities = simpleActivities.OrderByDescending(x => x.StartDate).ToList();
	LoadCalendar();
    }
    void LoadCalendar()
    {
        CalendarWeeks.Clear();

        for (var date = StartMonth; date <= EndMonth; date = date.AddMonths(1))
        {
            var monthWeeks = GetCalendarWeeks(date.Year, date.Month, simpleActivities);
            CalendarWeeks.AddRange(monthWeeks);
        }
    }
    void LoadMoreMonths()
    {
        StartMonth = StartMonth.AddMonths(-1); // Expand the range
        LoadCalendar();
    }

    private string GetIcon(string type)
    {
        return type switch
        {
            "Run" => Icons.Material.Filled.DirectionsRun,
            "Ride" => Icons.Material.Filled.DirectionsBike,
            "Swim" => Icons.Material.Filled.Pool,
            _ => Icons.Material.Filled.Help
        };
    }

    private class SimpleActivity
    {
        public string Type { get; set; }
        public DateTime StartDate { get; set; }
        public string Distance { get; set; }
	}

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public List<SimpleActivity> Activities { get; set; } = new();
    }

    private class CalendarWeek
    {
        public List<CalendarDay> Days { get; set; } = new();
    }

    List<CalendarWeek> GetCalendarWeeks(int year, int month, List<SimpleActivity> activities)
    {
        var firstDay = new DateTime(year, month, 1);
        int daysInMonth = DateTime.DaysInMonth(year, month);
        List<CalendarWeek> weeks = [];
        CalendarWeek currentWeek = new();

        // Pad days before the first day of the month
        int padStart = ((int)firstDay.DayOfWeek + 6) % 7; // Monday=0, Sunday=6
        for (int i = 0; i < padStart; i++)
        {
            currentWeek.Days.Add(new CalendarDay { Date = DateTime.MinValue, Activities = new() });
        }

        for (int day = 1; day <= daysInMonth; day++)
        {
            DateTime date = new(year, month, day);
            CalendarDay calendarDay = new()
                    {
                        Date = date,
                        Activities = activities.Where(a => a.StartDate.Date == date.Date).ToList()
                    };
            currentWeek.Days.Add(calendarDay);

            if (currentWeek.Days.Count == 7)
            {
                weeks.Add(currentWeek);
                currentWeek = new CalendarWeek();
            }
        }

        // Pad days after the last day of the month
        if (currentWeek.Days.Count > 0)
        {
            while (currentWeek.Days.Count < 7)
            {
                currentWeek.Days.Add(new CalendarDay { Date = DateTime.MinValue, Activities = new() });
            }
            weeks.Add(currentWeek);
        }

        return weeks;
    }

}
