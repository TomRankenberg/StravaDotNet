@page "/history"
@using Data.Models.Strava
@using StravaDotNet.ViewModels
@using StravaDotNet.Components.Services
@using MudBlazor
@inject NavigationManager Navigation
@inject AuthState AuthState
@inject DetailedActivityService DetailedActivityService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Activity History</PageTitle>

@foreach (CalendarWeek week in calendarWeeks.AsEnumerable().Reverse())
{
    <div class="week-row" style="display: flex;">
        @foreach (var day in week.Days)
        {
            <div class="day-cell" style="flex: 1 0 14.2857%; padding: 4px;">
                <MudPaper Class="calendar-day pa-2" Style="@GetBackgroundColor(day.Activities)">
                    @if (day.Date != DateTime.MinValue)
                    {
                        <span>@day.Date.ToString("dd-MM-y")</span>
                        @foreach (var activity in day.Activities)
                        {
                            <MudChip T="string" Color=@GetChipColor(activity.Type) Variant="Variant.Filled" Class="mt-1">
                                @($"{activity.Distance} {activity.Type.ToLower()}")
                            </MudChip>
                        }
                    }
                </MudPaper>
            </div>
        }
    </div>
}

@if (isLoaded)
{
    <form>
        <button type="button" class="btn btn-secondary" style="margin-right:30px;" @onclick="LoadMoreWeeks">Load More</button>
    </form>
}

@code {
    private bool isLoaded = false;
    private List<ActivityVm>? detailedActivities;
    private List<SimpleActivity>? simpleActivities;
    private DateTime startDay = DateTime.Now.AddDays(-8 * 7); // Eight weeks back
    private DateTime endDay = DateTime.Now;
    List<CalendarWeek> calendarWeeks = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var isLoggedIn = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "isLoggedIn");
            AuthState.IsLoggedIn = isLoggedIn == "true";
            await LoadData();
            StateHasChanged();
        }
    }

    private static MudBlazor.Color GetChipColor(string activityType)
    {
        return activityType switch
        {
            "Run" => Color.Secondary,
            "Ride" => Color.Primary,
            "Swim" => Color.Success,
            _ => Color.Default
        };
    }

    private static string GetBackgroundColor(List<SimpleActivity> activities)
    {
        var firstType = activities.FirstOrDefault()?.Type?.ToLower();
        return firstType switch
        {
            "run" => "background-color: lightcoral;",
            "ride" => "background-color: lightblue;",
            "swim" => "background-color: lightseagreen;",
            null => "background-color: lightgray;",
            _ => "background-color: white;"
        };
    }

    private async Task LoadData()
    {
        detailedActivities = await DetailedActivityService.GetDetailedActivityVmsAsync(startDay, endDay);
        simpleActivities = new List<SimpleActivity>();
        if (detailedActivities == null || !detailedActivities.Any())
        {
            isLoaded = true;
            return;
        };
        foreach (ActivityVm activity in detailedActivities)
        {
            if (activity.Activity.StartDate.HasValue && activity.Activity.Type != null)
            {
                simpleActivities.Add(new SimpleActivity
                        {
                            Type = activity.Activity.Type,
                            StartDate = activity.Activity.StartDate.Value,
						    Distance = activity.Activity.Distance.HasValue
								    ? $"{(activity.Activity.Distance.Value / 1000):F2} km"
								    : "N/A"
                        });
            }
        }
        simpleActivities = simpleActivities.OrderByDescending(x => x.StartDate).ToList();
        LoadCalendar();
        isLoaded = true;
    }

    void LoadCalendar()
    {
        calendarWeeks.Clear();

        var monthWeeks = GetCalendarWeeks(simpleActivities);
        calendarWeeks.AddRange(monthWeeks);
		StateHasChanged();
    }

    async Task LoadMoreWeeks()
    {
        startDay = startDay.AddDays(-2 * 7); // Expand the range
		List<ActivityVm>? newActivities = await DetailedActivityService.GetDetailedActivityVmsAsync(startDay, endDay);
        var newSimpleActivities = newActivities.Select(a => new SimpleActivity
        {
            Type = a.Activity.Type,
            StartDate = a.Activity.StartDate.Value,
            Distance = a.Activity.Distance.HasValue
                ? $"{(a.Activity.Distance.Value / 1000):F2} km"
                : "N/A"
        }).ToList();

        // Avoid duplicates based on unique properties
        foreach (var activity in newSimpleActivities)
        {
            if (!simpleActivities.Any(a => a.StartDate == activity.StartDate && a.Type == activity.Type))
            {
                simpleActivities.Add(activity);
            }
        }

        LoadCalendar();
    }

    List<CalendarWeek> GetCalendarWeeks(List<SimpleActivity> activities)
    {
        if (activities.Count == 0)
            return new List<CalendarWeek>();

        var startDate = activities.Min(a => a.StartDate.Date);
        var endDate = activities.Max(a => a.StartDate.Date);

        // Align start date to previous Monday and end date to next Sunday
        int padStart = ((int)startDate.DayOfWeek + 6) % 7; // Monday = 0
        int padEnd = 6 - ((int)endDate.DayOfWeek + 6) % 7;

        startDate = startDate.AddDays(-padStart);
        endDate = endDate.AddDays(padEnd);

        List<CalendarWeek> weeks = new();
        CalendarWeek currentWeek = new();

        for (var date = startDate; date <= endDate; date = date.AddDays(1))
        {
            var dayActivities = activities.Where(a => a.StartDate.Date == date).ToList();

            currentWeek.Days.Add(new CalendarDay
            {
                Date = date,
                Activities = dayActivities
            });

            if (currentWeek.Days.Count == 7)
            {
                weeks.Add(currentWeek);
                currentWeek = new CalendarWeek();
            }
        }

        return weeks;
    }

    private class SimpleActivity
    {
        public string Type { get; set; }
        public DateTime StartDate { get; set; }
        public string Distance { get; set; }
    }

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public List<SimpleActivity> Activities { get; set; } = new();
    }

    private class CalendarWeek
    {
        public List<CalendarDay> Days { get; set; } = new();
    }

}
